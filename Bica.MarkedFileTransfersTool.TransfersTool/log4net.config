<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <root>
      <level value="ERROR" />
      <!--<appender-ref ref="file" />-->
      <appender-ref ref="EventLogAppender" />
    </root>
    <appender name="file" type="log4net.Appender.RollingFileAppender">
      <!--ruta física y nombre de archivo donde se alojará archivo de lod de errores-->
      <file value=".\Log\Bica.MarkedFileTransfersTool.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>

    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <param name="LogName" value="Bica.MarkedFileTransfersTool.TransfersTool" />
      <param name="ApplicationName" value="Bica.MarkedFileTransfersTool.TransfersTool" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-5level %logger - %message%newline" />
      </layout>
    </appender>
    
  </log4net>
</configuration>